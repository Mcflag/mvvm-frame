<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="activity"
                type="cn.lcsw.diningpos.ui.trade_query.TradeDetailActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

        <TextView
                android:id="@+id/tv_merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_title_block_bg"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text=""
                android:textColor="@color/color_33"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="欢迎第十九层地狱" />

        <TextView
                android:id="@+id/tv_mch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_33"
                android:textSize="18sp"
                android:maxLines="1"
                android:maxWidth="250dp"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="@id/tv_merchant_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_merchant_name"
                app:layout_constraintRight_toRightOf="@id/tv_total_fee"
                tools:text="131354654661asdfsadfsadfasdfasdfasdfasdfasdfasdfasdfsadfsaf" />

        <TextView
                android:id="@+id/tv_tips_total_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="14dp"
                android:text="订单金额"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_merchant_name" />

        <TextView
                android:id="@+id/tv_total_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textColor="@color/money_blue"
                android:textSize="24sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_merchant_name"
                tools:text="￥1212" />

        <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#D8D8D8"
                app:layout_constraintLeft_toLeftOf="@+id/tv_tips_total_fee"
                app:layout_constraintRight_toRightOf="@+id/tv_total_fee"
                app:layout_constraintTop_toBottomOf="@+id/tv_tips_total_fee" />

        <TextView
                android:id="@+id/tv_tips_mch_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="商户号"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_tips_total_fee"
                app:layout_constraintTop_toBottomOf="@+id/line" />

        <TextView
                android:id="@+id/tv_mch_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text=""
                android:textColor="@color/color_33"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_tips_mch_no"
                app:layout_constraintRight_toRightOf="@+id/tv_total_fee"
                tools:text="131354654661" />

        <TextView
                android:id="@+id/tv_tips_terminal_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="终端号"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_tips_total_fee"
                app:layout_constraintTop_toBottomOf="@+id/tv_tips_mch_no" />

        <TextView
                android:id="@+id/tv_terminal_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text=""
                android:textColor="@color/color_33"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_tips_terminal_no"
                app:layout_constraintRight_toRightOf="@+id/tv_total_fee"
                tools:text="131354654661" />

        <TextView
                android:id="@+id/tv_tips_trade_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="交易时间"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_tips_total_fee"
                app:layout_constraintTop_toBottomOf="@+id/tv_terminal_no" />

        <TextView
                android:id="@+id/tv_trade_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/color_33"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_tips_trade_time"
                app:layout_constraintRight_toRightOf="@+id/tv_total_fee"
                tools:text="131354654661" />

        <TextView
                android:id="@+id/tv_tips_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="订单编号"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_tips_total_fee"
                app:layout_constraintTop_toBottomOf="@+id/tv_trade_time" />

        <TextView
                android:id="@+id/tv_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/color_33"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_tips_order_no"
                app:layout_constraintRight_toRightOf="@+id/tv_total_fee"
                tools:text="131354654661" />

        <TextView
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/red"
                android:textSize="18sp"
                android:visibility="visible"
                android:layout_marginBottom="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="11231231" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>