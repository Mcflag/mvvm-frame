<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="activity"
                type="cn.lcsw.diningpos.ui.trade_query.TradeQueryGridActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

        <TextView
                android:id="@+id/tv_merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_33"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
                android:id="@+id/func_1"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/func_2"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/shape_round_blue">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:text="单笔订单查询"
                    android:textColor="@color/color_33"
                    android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/func_2"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/func_1"
                app:layout_constraintRight_toLeftOf="@id/func_3"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/shape_round_blue">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:text="查询汇总"
                    android:textColor="@color/color_33"
                    android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/func_3"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/func_2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/shape_round_blue">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:text="当日汇总"
                    android:textColor="@color/color_33"
                    android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/func_4"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/func_2"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/shape_round_blue">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:text="检查更新"
                    android:textColor="@color/color_33"
                    android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/func_5"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintLeft_toRightOf="@id/func_1"
                app:layout_constraintRight_toLeftOf="@id/func_3"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/shape_round_blue">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:text="退款"
                    android:textColor="@color/color_33"
                    android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/func_6"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintLeft_toRightOf="@id/func_2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/shape_round_blue">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:text="定额支付"
                    android:textColor="@color/color_33"
                    android:textSize="22sp" />

        </LinearLayout>

        <TextView
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/red"
                android:textSize="20sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>